<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarStatement" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextViewHeaderStatement" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextViewLabelStatement" parent="TextViewHeaderStatement">
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewValueStatement" parent="TextViewHeaderStatement">
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextViewItemStatement" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextViewItemHeader" parent="TextViewItemStatement">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="TextViewItemBody" parent="TextViewItemStatement">
        <item name="android:textColor">@color/lightBlack</item>
    </style>

</resources>